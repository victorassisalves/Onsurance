{
  "database": [
    {
      "target": "onsurance-customers", 
      "rules": "database.rules.json"
    },
    {
      "target": "onsurance-items", 
      "rules": "database.rules.json"
    },
    {
      "target": "lavo", 
      "rules": "database.rules.json"
    }
    // {
    //   "target": "onsurance-pro-customers", 
    //   "rules": "database.rules.json"
    // },
    // {
    //   "target": "onsurance-pro-items", 
    //   "rules": "database.rules.json"
    // }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "rewrites": [ {
      "source": "/onboard", 
      "function": "onboard"
    },
    {
      "source": "/firstAccess", 
      "function": "firstAccess"
    },
    {
      "source": "/ignition", 
      "function": "ignition"
    },
    {
      "source": "/geofence", 
      "function": "geofence"
    },
    {
      "source": "/quotation", 
      "function": "quotation"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
