{
  "database": [
    {
      "target": "onsurance-customers",
      "rules": "database.rules.json"
    },
    {
      "target": "onsurance-items",
      "rules": "database.rules.json"
    },
    {
      "target": "lavo",
      "rules": "database.rules.json"
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "hosting": 
    // {
        // "target": "cotacao.onsurance.me/pneus",
      //   "public": "./public/tire-quote"
    // },
    // {
      // "target": "cotacao.onsurance.me/auto",
    //   "public": "./public/auto-quote", 
    // },
    {
      "target": "api",
      "public": "public",
      "rewrites": [
        {
          "source": "/onboard",
          "function": "onboard"
        },
        {
          "source": "/quote/**",
          "function": "quote"
        },
        {
          "source": "/firstAccess",
          "function": "firstAccess"
        },
        {
          "source": "/ignition",
          "function": "ignition"
        },
        {
          "source": "/geofence",
          "function": "geofence"
        }
      ],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    }
  }
}
